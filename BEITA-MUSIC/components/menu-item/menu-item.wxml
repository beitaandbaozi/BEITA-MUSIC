<!-- 计算属性 -->
<wxs src="../../utils/format.wxs" module="format"/>
<view class="hot-music-item" bindtap="handleToDetail">
  <view class="top">
    <image class="image" src="{{itemData.coverImgUrl}}" mode="widthFix" />
    <view class="count">
      {{format.formatCount(itemData.playCount)}}
    </view>
  </view>
  <view class="bottom">
    {{itemData.name}}
  </view>
</view>