.player-music .bg-image,
.player-music .bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.player-music .bg-cover {
  background: rgba(0, 0, 0, .4);
  backdrop-filter: blur(15px);
}

.tab {
  display: flex;
  font-size: 24rpx;
  color: #aaa;
}

.tab .divider {
  margin: 0 8rpx;
}

.tab .active {
  color: #fff
}