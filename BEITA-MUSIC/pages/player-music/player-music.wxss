.player-music .bg-image,
.player-music .bg-cover {
  position: fixed;
  left: 0;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.player-music .bg-cover {
  background: rgba(0, 0, 0, .4);
  backdrop-filter: blur(15px);
}

.tab {
  display: flex;
  font-size: 24rpx;
  color: #aaa;
}

.tab .divider {
  margin: 0 8rpx;
}

.tab .active {
  color: #fff
}

.music {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  font-size: 28rpx;
  color: #fff
}

.music .album {
  /* flex: 1 */
}

.music .album .image {
  width: 100%;
  border-radius: 12rpx;
}

.music .info .name {
  font-size: 48rpx;
  font-weight: 700;
}

.music .info .singer {
  font-size: 26rpx;
  color: #ccc;
  margin: 16rpx 0;
}

.music .lyric {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.music .progress .slider {
  padding: 0;
  margin: 0 0 12rpx 18rpx;
}

.music .progress .time {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.operation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0 30rpx;
}

.operation .btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0;
}

.operation .btn-mode {
  width: 80rpx;
  height: 80rpx;
}

.operation .btn-play {
  width: 120rpx;
  height: 120rpx;
}
/* 歌曲 */
.scroll-container {
  font-size: 28rpx;
  height: 100%;
  text-align: center;
  color: #aaa;
}
.scroll-container .item {
  height: 35px;
  line-height: 35px;
}