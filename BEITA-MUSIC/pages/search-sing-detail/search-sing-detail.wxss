page {
  background-color: rgba(0, 0, 0, .7);
  --sidebar-selected-background-color: rgba(230, 236, 252);
  --sidebar-selected-text-color: rgb(49, 67, 144);
  --sidebar-selected-font-weight: 700;
  --sidebar-selected-border-color: rgba(230, 236, 252);
  --sidebar-background-color: rgba(0, 0, 0, .1);
  --sidebar-text-color: #fff;
}

.tab {
  display: flex;
  font-size: 36rpx;
  color: #eee;
  font-weight: 600;
}

.main-container {
  display: flex;
}

.main-container .content {
  flex: 1;
}

.scroll-container {
  font-size: 28rpx;
  height: 100%;
  text-align: center;
  color: #aaa;
  /* 歌词不直接从底部滚动 */
  box-sizing: border-box;
}

/* 隐藏滚动条 */
.scroll-container ::-webkit-scrollbar {
  display: none
}

.content .info {
  margin-left: 20rpx;
  display: flex;
}

.info .header-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}

.info .data {
  flex: 1;
  margin-left: 15rpx;
}

.data .title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.data .author {
  display: flex;
  margin-bottom: 20rpx;
}

.data .author .author-img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.data .author text {
  margin-left: 10rpx;
  font-size: 30rpx;
  color: rgb(80, 125, 175)
}

.data .desc {
  color: #fff;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.comment-data-list {
  margin-top: 40rpx;
}

.comment-data {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.comment-data .infos {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.infos .comment-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}

.infos text {
  flex: 1;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}