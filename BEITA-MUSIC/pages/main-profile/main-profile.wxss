page {
  padding: 30rpx;
  box-sizing: border-box;
  background: #f3f3f3;
}

.section {
  padding: 30rpx;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
}

/* 个人信息 */
.self-infos {
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.self-infos .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.self-infos .content {
  margin-left: 20rpx;
}

/* 我的收藏、我的喜爱、历史记录 */

.tabs {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tabs .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tabs .item .icon {
  width: 60rpx;
  height: 60rpx;
}

.item .name {
  margin-top: 16rpx;
  font-size: 24rpx;
}

/* 我的歌单 */
.menu .create-menu {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: lightgray;
}

/* 创建歌单对话框 */
.input {
  margin: 30rpx;
  padding: 0 15rpx;
  border-radius: 12rpx;
  border: 1px solid lightgray;
  height: 60rpx;
  font-size: 28rpx;
}